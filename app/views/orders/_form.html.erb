<%= form_for([@chat,@order]) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <ul class="mt-3">
    <p>Lapsos recomendados</p>
    <li>Tema: 1 día hasta 5 días</li>
    <li>Plan: 6 a 20 días</li>
    <li>Capítulo: 7 a 30 días</li>
  </ul>
  <div class="form-group">
    <%= form.label 'Fecha de entrega' %>
    <%= form.date_select :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'Número de páginas pactadas' %>
    <%= form.number_field :number_page, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'Escribe un resumen del acuerdo al que han llegado' %>
    <%= form.text_area :body, class:'form-control', rows:3 %>
  </div>

  <div class="actions">
    <%= form.submit 'Generar orden', class:'btn btn-lg btn-info'%>
  </div>
<% end %>
