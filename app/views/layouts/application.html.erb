<!DOCTYPE html>
<html>
  <head>
    <title>Teschat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'partials/navigation'%>
    <div class="alert alert-primary text-center" style="display: <%= 'none' if notice.nil? && alert.nil?%>">
      <%= alert %>
      <%= notice %>
    </div>
    <%= yield %>
  </body>
</html>
