<div class="container">
    <div class="row mt-3 p-3 card d-flex justify-content-center align-items-center">
        <div class="col-xs-12 col-md-6">
            <h1>Sube tu foto de perfil</h1>
            <%= form_for(@usuario) do |form|%>
                <div class="form-group">
                    <%= form.file_field :photo, class: 'form-control'%>
                </div>
                <div class="field">
                    <%= form.submit %>
                </div>
            <% end %>
        </div>
    </div>
</div>