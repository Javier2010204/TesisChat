<div class="container">
    <div class="row mt-3 p-3 card d-flex justify-content-center align-items-center">
        <div class="col-xs-12 col-md-6">
            
            <% if @usuario == current_user %>
                <h1>Sube tu foto de perfil</h1>
                <%= form_for(@usuario) do |form|%>
                    <div class="form-group">
                        <%= form.file_field :photo, class: 'form-control'%>
                    </div>
                    <div class="field">
                        <%= form.submit %>
                    </div>
                <% end %>
            <% else %>
                <h1 class="mt-4">Califica el servicio</h1>
                <p class="">Califica el usuario con el que chateaste con una valoración de 1 a 5 donde 1 es PÉSIMO y 5 es EXCELENTE</p>
                <%= form_for(@usuario) do |form|%>
                    <div class="p-3">
                        <div class="form-check form-check-inline">
                            <%= form.radio_button :points, 1, :checked => true, class:"form-check-input"%>
                            <%= form.label "1", class: "form-check-label"%>
                        </div>
                        <div class="form-check form-check-inline">
                            <%= form.radio_button :points, 2, :checked => false, class:"form-check-input"%>
                            <%= form.label "2", class: "form-check-label"%>
                        </div>
                        <div class="form-check form-check-inline">
                            <%= form.radio_button :points, 3, :checked => false, class:"form-check-input"%>
                            <%= form.label "3", class: "form-check-label"%>
                        </div>
                        <div class="form-check form-check-inline">
                            <%= form.radio_button :points, 4, :checked => false, class:"form-check-input"%>
                            <%= form.label "4", class: "form-check-label"%>
                        </div>
                        <div class="form-check form-check-inline">
                            <%= form.radio_button :points, 5, :checked => false, class:"form-check-input"%>
                            <%= form.label "5", class: "form-check-label"%>
                        </div>
                    </div>
                    
                    <div class="field">
                        <%= form.submit 'Calificar', class:'btn btn-lg btn-info' %>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>