<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-xs-12 col-md-6 card p-3">
            <div class="card-body">
                <div class="row d-flex justify-content-center">
                    <div class="col-xs-12 col-md-4">
                        <% if @usuario.photo.attached? %>
                            <%= image_tag @usuario.photo, style:"height:100px;width:100px;border-radius:50%" %>
                        <% end %>
                    </div>
                    <div class="col-xs-12 col-md-4">
                        <h5 class="card-title"><%= @usuario.name %></h5>
                        <p class="card-subtitle text-muted"><%= @usuario.career.name%></p>
                        <p class="card-subtitle text-muted"><%= @usuario.points%></p>
                    </div>
                </div>
                <div class="row d-flex justify-content-center mt-3">
                    <div class="col-xs-12">
                        
                        <% if @usuario == current_user %>
                             <%= link_to 'Subir foto', edit_user_path(@usuario), class:'card-link' %>       
                        <% end %>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>