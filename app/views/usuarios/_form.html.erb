<%= form_for(@usuario) do |form|%>
    <div class="form-group">
        <%= form.label 'nombre del usuario'%>
        <%= form.text_field :name, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%= form.label 'correo electrónico'%>
        <%= form.email_field :email, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%= form.label 'contraseña'%>
        <%= form.text_field :password, class: 'form-control'%>
    </div>

    <div class="form-group">
        <%= form.label 'rol'%>
        <% roles = ['admin', 'student', 'proffesional']%>
        <%= form.select(:rol, roles, {:prompt => 'Seleccione el rol del usuario'}, class:'form-control')%>
    </div>

    <div class="form-group">
        <%= form.label 'Carrera'%>
        <%= form.collection_select :career_id, @careers, :id, :name, {selected: @usuario.id, include_blank: false, :prompt=>"Seleccione una carrera para el usuario"},class:'form-control'%>
    </div>

    <div class="filed">
        <%= form.submit 'Crear usuario', class:'btn btn-info'%>
    </div>
<% end %>