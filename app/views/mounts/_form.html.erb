<%= form_with(model: mount, local: true) do |form| %>
  <% if mount.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mount.errors.count, "error") %> prohibited this mount from being saved:</h2>

      <ul>
        <% mount.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label 'Fecha' %>
    <%= form.date_select :date, class:'form-control' %>
  </div>

  <div class="form-group">
        <%= form.label 'Usuario'%>
        <%= form.collection_select :user_id, @usuarios, :id, :name, {selected: @mount.id, include_blank: false, :prompt=>"Seleccione al usuario"},class:'form-control'%>
    </div>

  <div class="actions">
    <%= form.submit 'Guardar', class:'btn btn-info' %>
  </div>
<% end %>
