<p id="notice"><%= notice %></p>

<h1>Extensions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Chat</th>
      <th>Receiver</th>
      <th>Status</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @extensions.each do |extension| %>
      <tr>
        <td><%= extension.user_id %></td>
        <td><%= extension.chat_id %></td>
        <td><%= extension.receiver_id %></td>
        <td><%= extension.status %></td>
        <td><%= extension.date %></td>
        <td><%= link_to 'Show', extension %></td>
        <td><%= link_to 'Edit', edit_extension_path(extension) %></td>
        <td><%= link_to 'Destroy', extension, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Extension', new_extension_path %>
