<div class="container mt-4">
  <div class="row d-flex justify-content-center align-items-center card">
    <div class="col-xs-12 col-md-8">
      <h1>Ordenes de trabajo</h1>
      <table class="table">
        <thead>
          <tr>
          <th scope="col">#</th>
          <th scope="col">Estudiante</th>
          <th scope="col">Profesional</th>
          <th scope="col">Estado</th>
          <th scope="col">Etapa</th>
          <th scope="col">Fecha de expiraci√≥n</th>
          <th scope="col">Contador</th>
          <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          
          <% if current_user.rol == "admin" %>
            <% @job_applications.each do |job_application| %>
              <tr>
                  <th scope="row"><%= job_application.id %></th>
                  <td><%= job_application.user.name %></td>
                  <td><%= job_application.professional.name %></td>
                  <td><%= job_application.status %></td>
                  <td><%= job_application.stage %></td>
                  <td><%= job_application.expires_date %></td>
                  <td><%= job_application.counter %></td>
                  <td><%= link_to 'Ver', job_application %></td>
              </tr>
            <% end %>
          <% elsif current_user.rol == "professional" %>
            <% @job_applications_professional.each do |job_application| %>
              <tr>
                  <th scope="row"><%= job_application.id %></th>
                  <td><%= job_application.user.name %></td>
                  <td><%= job_application.professional.name %></td>
                  <td><%= job_application.status %></td>
                  <td><%= job_application.stage %></td>
                  <td><%= job_application.expires_date %></td>
                  <td><%= job_application.counter %></td>
                  <td><%= link_to 'Ver', job_application %></td>
              </tr>
            <% end %>
          <% elsif current_user.rol == "student" %>
            <% @job_applications_student.each do |job_application| %>
              <tr>
                  <th scope="row"><%= job_application.id %></th>
                  <td><%= job_application.user.name %></td>
                  <td><%= job_application.professional.name %></td>
                  <td><%= job_application.status %></td>
                  <td><%= job_application.stage %></td>
                  <td><%= job_application.expires_date.strftime("%d-%m-%y %H:%M") %></td>
                  <td><%= job_application.counter %></td>
                  <td><%= link_to 'Ver', job_application %></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
      </table>
      
      <% if current_user.rol == "admin" %>
        <div class="row d-flex justify-content-center mb-3">
          <div class="col-xs-12 col-md-6">
              <%= link_to 'Crear orden de trabajo para profesional', new_job_application_path, class:'btn btn-info' %>
          </div>
           <div class="col-xs-12 col-md-6">
              <%= link_to 'Crear orden de trabajo para editor', new_editor_job_path, class:'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
